{
  "sources": [
    {
      "provider": "git",
      "repository": "https://${PERSONAL_ACCESS_TOKEN}@github.com/znsio/central-contract-repo-private.git",
      "test": [
        "in/specmatic/examples/store/api_order_v3.yaml"
      ]
    }
  ],
  "report": {
    "formatters": [
      {
        "type": "text",
        "layout": "table"
      }
    ],
    "types": {
      "APICoverage": {
        "OpenAPI": {
          "successCriteria": {
            "minThresholdPercentage": 70,
            "maxMissedEndpointsInSpec": 4,
            "enforce": true
          },
          "excludedEndpoints": [
            "/internal/metrics"
          ]
        }
      }
    }
  }
}